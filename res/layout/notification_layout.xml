<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:layout_width="50dip"
               android:layout_height="50dip"
               android:id="@+id/update_notification_icon"
               android:adjustViewBounds="true"
               android:layout_centerVertical="true"
               android:layout_margin="10dip"
            />

    <ProgressBar android:layout_width="match_parent"
                 android:layout_height="10dip"
                 android:id="@+id/update_notification_progress"
                 style="@android:style/Widget.ProgressBar.Horizontal"
                 android:layout_toRightOf="@+id/update_notification_icon"
                 android:layout_toLeftOf="@+id/update_notification_progressnumber"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="5dip"
                 android:max="100"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/update_notification_progressnumber"
              android:layout_alignParentRight="true"
              android:layout_marginLeft="5dip"
              android:layout_marginRight="5dip"
              android:layout_centerVertical="true"
            />

</RelativeLayout>